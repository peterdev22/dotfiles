# Mouse Support
MOUSE_CONFIG=(
  mouse_drop_action swap
  # focus_follows_mouse autofocus
  # mouse_follows_focus on

  mouse_modifier ctrl
  mouse_action1 move
  mouse_action2 resize
)
yabai -m config "${MOUSE_CONFIG[@]}" # Apply mouse support

# Padding
PADDING_CONFIG=(
  top_padding 8
  bottom_padding 12
  left_padding 12
  right_padding 12
  window_gap 12
  
  # external_bar all:34:0
)
yabai -m config "${PADDING_CONFIG[@]}" # Apply padding

# Bordering
BORDER_CONFIG=(
  window_border off
  
  normal_window_border_color 0xFF2A2C49
  active_window_border_color 0xFF89b4fa
  window_border_width 3
  window_border_radius 12
  window_border_hidpi on
  window_border_blur off
)
yabai -m config "${BORDER_CONFIG[@]}" # Apply bordering

# App Exceptions
UNMANAGED=(
  System Settings
  Calculator
  Raycast
  Shottr
  Calculator
  Installer
  Archive Utility
  System Information
  Bitwarden
  Finder
  Simulator
  QuickTime Player
)
for ((i = 1; i <= "${#UNMANAGED[@]}"; i++)); do
	yabai -m rule --add app="^${UNMANAGED[(($i - 1))]}.*$" manage=off
done

# Misc. Exceptions
yabai -m rule --add app="^Calendar$" title="(General|^$)" manage=off # Calendar.app new event suggestion window
yabai -m rule --add app="^Mail" title="^Re.*" manage=off # Mail.app reply window
yabai -m rule --add app="^Mail" title="^New Message" manage=off # Mail.app new message window
yabai -m rule --add app="^Microsoft Word" title="^Open new and recent files" manage=off # Microsoft Word new file window
yabai -m rule --add app="^Microsoft PowerPoint" title="^Open new and recent files" manage=off # Microsoft Word new file window
yabai -m rule --add app="^Microsoft Excel" title="^Open new and recent files" manage=off # Microsoft Word new file window
yabai -m rule --add app="^Arc$" title="^Space.*$" manage=off # Arc Browser little arc windows unmanaged
yabai -m rule --add app="^Arc$" title="^$" manage=off # Arc Browser little arc windows unmanaged